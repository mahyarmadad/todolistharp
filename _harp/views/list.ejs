<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>To Do List</title>
  </head>
  <body>
      <div class="container">

          <div class="box col-lg-6 col-md-8 col-sm-11" id="heading">
                <h1 id="txt">Today is <%= kindofday %> </h1>
          </div>
          <div class="box col-lg-4 col-md-6 col-sm-8" id="suge">
            <h3 id="txt">This is your <%= listtitle %> Task </h3>
          </div>

          <div class="list">
            <% taskitem.forEach(function(item) {%>
              <form action="/delete" method="POST">
                <div class="item">
                  <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                  <p id="task"><%= item.name %></p>
                </div>
                <input type="hidden" name="listname" value="<%= listtitle %>">
              </form>
              <% }) %>


        <form method="POST" action="/">
              <div class="row">
                      <input type="text" class="" name="item" placeholder="New Task" autocomplete="off">
                      <button type="submit" name="list" value="<%= listtitle %>" class="btn btn-info btntask">+</button>
                </div>
            </form>
        </div>

        <footer class="text-center footer">
            <p>&reg; Developed by Mahyarmadad &copy; 2020</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>